<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <title>User Notifications</title>
</head>
<body class="bg-gray-100">
  <div class="min-h-screen flex flex-col items-center">
    <div class="w-full bg-blue-500 px-4 py-2 shadow-lg flex justify-between items-center">
      <h1 class="text-2xl font-bold text-white">Notifications</h1>
      <a href="/dashboard" class="px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600">Dashboard</a>
    </div>
    <div class="bg-white p-6 rounded-lg shadow-lg max-w-4xl w-full mb-8 mt-4">
      <h2 class="text-2xl font-bold mb-4">Your Notifications</h2>
      <div class="space-y-4">
        <% notifications.forEach(notification => { %>
          <div class="border rounded-lg p-4 shadow">
            <h3 class="text-xl font-bold"><%= notification.title %></h3>
            <p class="text-gray-700"><%= notification.message %></p>
            <small class="text-gray-500">Received at: <%= new Date(notification.createdAt).toLocaleString() %></small>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</body>
</html>
